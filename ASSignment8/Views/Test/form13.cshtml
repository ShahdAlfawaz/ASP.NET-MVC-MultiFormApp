<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Login</title>
</head>
<body>

    <div class="d-lg-flex half">

        <div class="contents" style="width: 50%; display: flex; align-items: center; justify-content: center; padding:0%">
            <div class="container">
                <div class="row align-items-center justify-content-center" style="padding-left:10%">
                    <div class="col-md-8">
                        <h3>Welcome to <strong>Form 13</strong></h3>
                        <p class="mb-4">Please enter your details to continue.</p>
                        <form method="post">
                            <div class="form-select-lg">
                                <label style="padding-right:5%">Department</label>
                                <input type="text" name="dep" value="@TempData["dep"]" readonly />
                                
                            </div>
                            <div class="form-group last mb-3" style="padding-left:5%">
                                <label style="padding-right:5%">Telephone</label>
                                <input type="text" name="phone" value="@ViewBag.phone" readonly />
                            </div>
                            <div class="d-flex mb-5 align-items-center">
                                <label style="padding-right:3%">Description</label>
                                <div>
                                    <textarea name="desc" cols="26" rows="5" readonly> @ViewBag.desc</textarea>
                                </div>
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div style="width:45%; height: 90vh; float: left;box-sizing: border-box;">
            <img src="~/assets/img/programming.jpg" style="width: 100%; height: 100%; object-fit: cover; object-position: center; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);">
        </div>
    </div>


</body>
</html>
